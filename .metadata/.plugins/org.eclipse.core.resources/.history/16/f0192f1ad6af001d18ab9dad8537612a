package exSwitch;

import java.util.Scanner;
public class ExDois {

	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);
		String nome, c1, c2, c3, c4, c5, c6;
		int cod;
		float salario, salarionovo;
		
		
		System.out.println("Digite seu nome: ");
		nome = leia.nextLine();
		
		System.out.println("Digite o código do seu cargo ");
		cod = leia.nextInt();
		
		System.out.println("Digite seu salário: ");
		salario = leia.nextFloat();
		
		c1 = "Gerente";
		c2 = "Vendedor";
		c3 = "Supervisor";
		c4 = "Motorista";
		c5 = "Estoquista";
		c6 = "Técnico de TI";
		
		switch(cod) {
		
		case 1:
			System.out.println("\nNome do colaborador: " + nome);
			System.out.println("Cargo: " + c1);
			salarionovo = salario + ((salario / 100) * 10);
			System.out.printf("Novo salário: %1.f", + salarionovo);
			break;
		case 2:
			System.out.println("Nome do colaborador: " + nome);
			System.out.println("Cargo: " + c2);
			salarionovo = salario + ((salario / 100) * 7);
			System.out.printf("Novo salário: %2f", + salarionovo);
			break;
		case 3:
			System.out.println("Nome do colaborador: " + nome);
			System.out.println("Cargo: " + c3);
			salarionovo = salario + ((salario / 100) * 9);
			System.out.printf("Novo salário: %2f", + salarionovo);
			break;
		case 4:
			System.out.println("Nome do colaborador: " + nome);
			System.out.println("Cargo: " + c4);
			salarionovo = salario + ((salario / 100) * 6);
			System.out.printf("Novo salário: %2f", + salarionovo);
			break;
		case 5:
			System.out.println("Nome do colaborador: " + nome);
			System.out.println("Cargo: " + c5);
			salarionovo = salario + ((salario / 100) * 5);
			System.out.printf("Novo salário: %2f", + salarionovo);
			break;
		case 6:
			System.out.println("Nome do colaborador: " + nome);
			System.out.println("Cargo: " + c6);
			salarionovo = salario + ((salario / 100) * 8);
			System.out.printf("Novo salário: %2f", + salarionovo);
			break;
		}
		
	}

}
