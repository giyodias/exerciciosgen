package exFor;

import java.util.Scanner;

public class ExDois {

	public static void main(String[] args) {
		Scanner leia = new Scanner(System.in);
		int contPar, contImpar, num1, num2, num3;
		
		System.out.println("Digite o 1º número");
		num1 = leia.nextInt();
		
		System.out.println("Digite o 2º número");
		num2 = leia.nextInt();
		
		System.out.println("Digite o 3º número");
		num3 = leia.nextInt();
		
		if(num1 % 2 == 0) {
			for(contPar = 1; contPar <= 10; contPar++) {
			}
			System.out.println("Numeros pares: " + contPar);
		}else{
			for(contImpar = 1; contImpar <= 10; contImpar++) {
			}
			System.out.println("Numeros pares: " + contImpar);
			
		}
		
		
		
		
		
		leia.close();
	}

}
